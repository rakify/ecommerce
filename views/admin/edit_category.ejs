<%- include('../_layouts/adminheader') %>

<h2 class = 'category-title'>Edit a category</h2>
<a href = '/admin/categories' class = 'btn btn-primary'>Back to all categorys</a>
<br><br>

<form method = 'post' action = '/admin/categories/edit-category/<%= category._id %>'>

    <div class = 'mb-3'>
        <label for = '' class = 'form-level'>Title</label>
        <input type = 'text' class='form-control' name = 'title' value = '<%= category.title %>' placeholder = 'Title'>
    </div>
    <button class = 'btn btn-outline-secondary' type='submit'>Submit</button>
</form>



<%- include('../_layouts/adminfooter') %>
<%- include('../_layouts/adminheader') %>

<h2 class = 'page-title'>Add a page</h2>
<a href = '/admin/pages' class = 'btn btn-primary'>Back to all pages</a>
<br><br>

<form method = 'post' action = '/admin/pages/add-page'>

    <div class = 'mb-3'>
        <label for = '' class = 'form-level'>Title</label>
        <input type = 'text' class='form-control' name = 'title' value = '<%= title %>' placeholder = 'Title'>
    </div>

    <div class = 'mb-3'>
        <label for = '' class = 'form-level'>Slug</label>
        <input type = 'text' class='form-control form-control-sm' name = 'slug' value = '<%= slug %>' placeholder = 'Slug'>
    </div>

    <div class = 'mb-3'>
        <label for = '' class = 'form-level'>Content</label>
        <textarea name="content" class='form-control' rows="4" placeholder="Content"><%= content %></textarea>
    </div>

    <input type="hidden" name="sorting" value="100">

    <button class = 'btn btn-outline-secondary' type = 'submit'>Submit</button>
</form>



<%- include('../_layouts/adminfooter') %>
<%- include('_layouts/header') %>

<div class="card">
    <div class="col-xs-12 col-md-5">
    <img class="card-img-top" src="<%= product.images[0] %>" alt="">
    </div>
    <h1 class="card-header"><%= product.title %></h1>
    <div class="col-xs-12 col-md-7">
        <p><b>Description: </b><%= product.description %></p>
        <p><b>Price: </b>à§³<%= product.price %></p>
        <p><b>Seller: </b><a class="card-link" href="/products/shop/<%= product.seller %>"><%= product.seller %></a></p>
        <% if (loggedIn) { %>
        <p><a class="btn btn-primary btn-lg btn-block" href="/cart/add/<%= product.slug %>">Add to cart</a></p>
        <% } else { %>
        <button type="button" class="btn btn-lg btn-primary btn-block" disabled>Add to cart</button>    
        <p style="color: red;">You must be logged in to purchase this item.</p>
        <% } %>
        
        <p><b>Product Gallary:</b></p>
    </div>
        <div class="col-xs-12">
        <ul class="gallery">
            <% if(product.images.length>1) {%>
            <% product.images.slice(1).forEach((image)=>{ %>
            <li>
                <a data-fancybox="gallery" href="<%= image %>"><img
                        class="pimage" src="<%= image %>" alt="Product_images"></a>
            </li>
            <% })} else { %>
            <br>
            <p style="color:gray">No more images available right now for this product.</p>
            <% } %>
        </ul>
    </div>
</div>

<%- include('_layouts/footer') %>
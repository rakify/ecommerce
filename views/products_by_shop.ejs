<%- include('_layouts/header') %>


<div class="h3 card-header"><%= title %></div>
<div class="row">
    <% if (products.length == 0){ %>
    <p style="color: gray; padding: 20px;">No products announced yet.</p>
    <% } else { %>
    <% products.forEach((product)=>{ %>
    <div class="col-sm-4">
        <a class="card-link" href="/products/<%= product.category %>/<%= product.slug %>">
            <img class="card-img-top" style="width: 10rem; height: 10rem;"
                src="/images/product_images/<%= product._id %>/<%= product.images[0] %>" alt="">
        </a>
        <div class="card-body">
            <span class="h6"><%= product.title %></span> <span class="badge badge-info">à§³ <%= product.price %></span><br>
            <a class="card-link" href="/products/<%= product.category %>/<%= product.slug %>">View Details</a>
        </div>
    </div>
    <% })} %>
</div>


<!-- Pagination begins -->
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        <% if(first>1) { %>
        <li class="page-item"><a class="page-link"
                href="/products/shop/<%= shopname %>?page=<%= first-1 %>">Previous</a></li>
        <% } else { %>
        <li class="page-item disabled"><a class="page-link"
                href="/products/shop/<%= shopname %>?page=<%= first-1 %>">Previous</a></li>
        <% } %>
        <% if(max>first) { %>
        <li class="page-item"><a class="page-link"
                href="/products/shop/<%= shopname %>?page=<%= first+1 %>"><%= first+1 %></a></li>
        <% } %>
        <% if(max>first+1) { %>
        <li class="page-item"><a class="page-link"
                href="/products/shop/<%= shopname %>?page=<%= first+2 %>"><%= first+2 %></a></li>
        <% } %>
        <% if(max>first+2) { %>
        <li class="page-item"><a class="page-link"
                href="/products/shop/<%= shopname %>?page=<%= first+3 %>"><%= first+3 %></a></li>
        <% } %>
        <% if(max>first) { %>
        <li class="page-item"><a class="page-link" href="/products/shop/<%= shopname %>?page=<%= first+1 %>">Next</a>
        </li>
        <% } else { %>
        <li class="page-item disabled"><a class="page-link"
                href="/products/shop/<%= shopname %>?page=<%= first+1 %>">Next</a></li>
        <% } %>
    </ul>
</nav>


<%- include('_layouts/footer') %>
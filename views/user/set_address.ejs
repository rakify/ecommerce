<%- include('../_layouts/header') %>

<h2 class="page-title"><%= title %></h2>

<form method='post' action="/user/set-address">
    <table class="table table-borderless">
        <b><label for="address">Change Delivery Address: </label></b>
        <th>
            <div class="form-group">
                <label for="divisions" class="form-label">Select Division: *</label>
                <input class="form-control" name="division" list="division" value="<%= (locals.user.address[0])?user.address[0].division:"" %>" id="divisions" placeholder="Division" required>
                <datalist id="division">
                    <option selected value="Barishal">
                    <option value="Chattogram">
                    <option value="Dhaka">
                    <option value="Khulna">
                    <option value="Mymensingh">
                    <option value="Rajshahi">
                    <option value="Rangpur">
                    <option value="Sylhet">
                </datalist>
             </div>
        </th>
        <th>
            <div class="form-group">
                <label for="district" class="form-level">Set District: * </label>
                <input class="form-control" type="text" name="district" required placeholder="District"
                    value="<%= (locals.user.address[0])?user.address[0].district:"" %>" />
            </div>
        </th>
    </table>
    <div class="form-group">
        <b><label for="district">Set Full Address: * </label></b><br>
        <textarea name="address" required class='form-control' id="ck" rows="6"
            placeholder="Full Address"><%= (locals.user.address[0])?user.address[0].address:"" %></textarea>
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block">
        Set
    </button>
</form>

<%- include('../_layouts/footer') %>
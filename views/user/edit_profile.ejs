<%- include('../_layouts/header') %>

<h2 class="page-title">Edit Profile</h2>

<form method='post' action="/user/edit-profile">
    <table class="table table-borderless">
        <th>
            <div class="form-group">
                <label for="username">Change Username: </label>
                <input type="text" name="username" class="form-control" placeholder="<%= user.username %>" />
            </div>
        </th>
        <th>
            <div class="form-group">
                <label for="email">Change Email: </label>
                <input type="email" name="email" class="form-control" placeholder="<%= user.email %>" />
            </div>
        </th>
    </table>
    <table class="table table-borderless">
        <th>
            <div class="form-group">
                <label for="First Name">Change First Name: </label>
                <input type="text" name="fname" class="form-control" placeholder="<%= user.fname %>" />
            </div>
        </th>
        <th>
            <div class="form-group">
                <label for="Last Name">Change Last Name: </label>
                <input type="text" name="lname" class="form-control" placeholder="<%= user.lname %>" />
            </div>
        </th>
        <th>
            <div class="form-group">
                <label for="Phone Number">Change Phone Number:(+88) </label>
                <input type="text" name="pn" class="form-control" placeholder="<%= user.pn %>" />
            </div>
        </th>
    </table>

    <div class="form-group">
        <b><label for="password">Change Password: </label></b>
        <i class="fas fa-eye" id="togglePassword"></i>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" />
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block">
        Update
    </button>
</form>

<%- include('../_layouts/footer') %>
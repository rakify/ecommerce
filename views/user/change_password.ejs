<%- include('../_layouts/header') %>

<h2 class="page-title"><%= title %></h2>

<form method='post' action="/user/change-password">
    <div class="form-group">
        <b><label for="password">New Password: </label></b>
        <i class="fas fa-eye" id="togglePassword"></i>
        <input type="password" id="password" name="newPw" class="form-control" placeholder="New Password" />
    </div>
    
    <div class="form-group">
        <b><label for="password">Confirm New Password: </label></b>
        <i class="fas fa-eye" id="togglePassword2"></i>
        <input type="password" id="password2" name="confirmNewPw" class="form-control" placeholder="Confirm New Pasword" />
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block">
        Change
    </button>
</form>

<%- include('../_layouts/footer') %>
<%- include('_layouts/header') %>

<h1 class="page-title"><%= title %></h1>
<form method="post" action="/users/login">
    <div class="form-group">
        <b><label>Username: </label></b>
        <input type="text" name="username" class="form-control" placeholder="Username">
    </div>
    <div class="form-group">
        <b><label>Password: </label></b><i class="fas fa-eye" id="togglePassword"></i>
        <input type="password" id="password" name="password" class="form-control"  placeholder="Password">
    </div>
<br>
     <button type="submit" class="btn btn-primary btn-block">Log in</button>
</form>
<p class="lead mt-4"><a class="card-link" href="/users/register">Don't Have An Account? </a></p>
<p class="lead mt-4"><a class="card-link" href="/user/forgot-password">Forgot Password? </a></p>
<%- include('_layouts/footer') %>